<div class="container container__filterControls"{{action 'expand'}}>
  <span class="container__filterControls-label">Fitler Controls...</span>
</div>
<div class="flex layout-row layout-align-center-center container container--fixed {{if toExpandFilterControls 'container--expand'}}">
  <div class="flex-35 layout-column">
    {{#paper-select
      options=categories
      label="Filter by categories"
      selected=chosenCat
      onChange=(action "filterByCategory") as |cat|}}
      {{cat}}
    {{/paper-select}}
  </div>
  <div class="flex-35 layout-column">
    {{paper-input
      class="flex-30"
      label="Filter by name"
      value=chosenName
      onChange=(action "filterByName")}}
  </div>
</div>
<div class="flex layout-column layout-wrap layout-align-center-center feed-container" onmousewheel={{action "fetchMore"}}>
  {{#if (gt filteredItemsByName.length 0 (and (not-eq chosenName '')))}}
    {{#each filteredItemsByName as |item index|}}
      {{game-feeds game=item }}
    {{/each}}
  {{else}}
    {{#each arrengedContent as |item index|}}
      {{game-feeds game=item }}
    {{/each}}
  {{/if}}
</div>
{{#modal-window isLoading=isLoading}}
  {{paper-progress-circular class="md-hue-1" diameter=60 strokeRatio=0.27}}
{{/modal-window}}
